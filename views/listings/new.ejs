<% layout("/layouts/boilerplate") %>
    <div class="row">
        <div class="col-8 offset-2">
        <h1>new listing</h1>
    <form action="/listings" method="post"novalidate class="needs-validation">
        <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="listing[title]" placeholder="enter title" id="title" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid title</div>
        <div class="valid-feedback">Title looks good</div>
        </div>

        <br>
        <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="listing[description]" type="text" placeholder="enter description" class="form-control" required></textarea>
        <div class="invalid-feedback">Please enter a valid description</div>
        <div class="valid-feedback">Description looks good</div>
        </div>
        <br>

        <div class="mb-3">
        <label for="image" class="form-label">Image</label>
        <input type="text" name="listing[image]" placeholder="image" id="image" class="form-control" required>
        <div class="invalid-feedback">Please enter a URL</div>
        <div class="valid-feedback">URL looks good</div>
        </div>
        <br>

        <div class="row">
        <div class="mb-3 col-md-4">
        <label for="amount" class="form-label">Amount</label>
        <input type="number" id="amount" name="listing[price]" placeholder="enter amount" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid amount</div>
        <div class="valid-feedback">Amount looks good</div>
        </div>
        <br>

        <div class="mb-3 col-md-8">
        <label for="country" class="form-label">Country</label>
        <input type="text" name="listing[country]" placeholder="country" id="country" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid Country name</div>
        <div class="valid-feedback">Country name looks good</div>
        </div>
        <br>
        </div>
        

        <div class="mb-3">
        <label for="location" class="form-label">Location</label>
        <input type="text" name="listing[location]" placeholder="location" id="location" class="form-control" required>
        <div class="invalid-feedback">Please enter a valid location</div>
        <div class="valid-feedback">location looks good</div>
        </div>
        <br>


        <button class="btn btn-dark add-btn mt-3">Add</button>

    </form>
    </div>
    </div>

